<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thêm Loại Đồ uống</title>
    <!-- Latest compiled and minified CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
      body {
        background-image: url("https://mdbootstrap.com/img/Photos/Others/images/79.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        color: black;
      }

      .container {
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        padding: 20px;
        width: 80%;
      }
    </style>
  </head>

  <body>
    <%- include('../Screen/Navbar.ejs') -%>
    <div class="container">
      <h1 class="pagination justify-content-center h1 text-dark">
      Thêm Loại Đồ uống
      </h1>
      <form id="SubmitTable" class="was-validated">
        <div class="mb-3 mt-3">
          <label for="name" class="form-label">Name:</label>
          <input
            type="name"
            class="form-control"
            id="name"
            placeholder="Enter name"
            name="name"
            required
          />
          <div class="valid-feedback">Valid.</div>
          <div class="invalid-feedback">Please fill out this field.</div>
        </div>
        <div class="form-group">
          <label for="image" class="form-label">Image:</label>
          <input
            type="file"
            class="form-control"
            id="image"
            placeholder="image..."
            name="image"
            required
            multiple
          />
          <div class="valid-feedback">Valid.</div>
          <div class="invalid-feedback">Please fill out this field.</div>
        </div>

        <button
          type="submit"
          class="btn btn-primary d-block mx-auto"
          style="width: 200px"
        >
          SUBMIT
        </button>
      </form>
    </div>
    <script>
      try {
        const SubmitSignUp = document.getElementById("SubmitTable");

        SubmitSignUp.addEventListener("submit", (event) => {
          event.preventDefault();
          var form = document.getElementById("SubmitTable");
          var formData = new FormData(form);

          fetch("/insert/type", {
            method: "POST",
            body: formData,
          })
            .then((response) => {
              console.log(response);
              if (response.status == 200) {
                alert("Insert successfully !!!");
                // window.location.href = "/list";
              } else {
                alert("Insert failed already exists");
              }
            })
            .then((data) => {
              console.log(data);
            })
            .catch((err) => {
              console.log(err);
            });
        });
      } catch (error) {
        console.log(error);
      }
    </script>
  </body>
</html>
